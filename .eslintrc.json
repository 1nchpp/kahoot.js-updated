{
	"extends": "eslint:recommended",
	"env": {
		"node": false,
		"commonjs": false,
		"es6": true,
		"browser": true
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 11
	},
	"rules": {
		"semi": ["error", "always"],
		"no-constant-condition": ["error", {"checkLoops": false}],
		"no-unused-vars": ["error", {"args": "none"}],
		"no-empty": "off",
		"no-control-regex": "off",
		"indent": ["error", 2, {"SwitchCase": 1}],
		"quotes": ["error", "double", {"avoidEscape": true}]
	},
	"root": true
}
